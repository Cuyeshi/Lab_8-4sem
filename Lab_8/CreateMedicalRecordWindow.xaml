<Window x:Class="Lab_8.CreateMedicalRecordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Medical Record" Height="300" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Margin="10">
            <Label Content="Doctor ID:"/>
            <TextBox x:Name="DoctorIDTextBox"/>
            <Label Content="Patient ID:"/>
            <TextBox x:Name="PatientIDTextBox"/>
            <Label Content="Diagnosis:"/>
            <TextBox x:Name="DiagnosisTextBox"/>
            <Label Content="Examination Date:"/>
            <TextBox x:Name="ExaminationDateTextBox"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Confirm" Click="Confirm_Click" Width="100" Margin="5"/>
            <Button Content="Cancel" Click="Cancel_Click" Width="100" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
